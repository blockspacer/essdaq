#!/bin/bash

OSIMG=${1:-ubuntu}

docker build -f Dockerfile_$OSIMG -t essdaq$OSIMG . || exit

containers=$(docker ps -a -q --filter name=$OSIMG)
if [[ $containers != "" ]]; then
  docker rm $containers
fi

FILESYS="-v /tmp/dockerresults:/tmp/results"
PORTS="--expose=8888 -p 8888:8888/tcp"

docker network prune -f
docker network create --subnet=10.1.0.0/16 essdaqnet

docker run $FILESYS $PORTS -it --net essdaqnet --ip 10.1.15.16 --name from_build$OSIMG essdaq$OSIMG
